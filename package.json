{
  "name": "rough-charts",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "release": "lerna run build && lerna publish",
    "deploy-storybook": "lerna run build && lerna run deploy-storybook"
  },
  "devDependencies": {
    "@storybook/cli": "^5.2.3",
    "commitizen": "^4.0.3",
    "cz-conventional-changelog": "3.0.2",
    "husky": "^3.0.8",
    "lerna": "^3.16.4",
    "parcel-bundler": "^1.12.3",
    "typescript": "3.5.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true"
    }
  },
  "dependencies": {}
}
